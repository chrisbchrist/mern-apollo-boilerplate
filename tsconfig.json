{
  "compilerOptions": {
    "outDir": "./dist/",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "skipLibCheck": true,
    "types": [
      "node",
      "react",
      "react-dom",
      "react-router-dom",
      "react-router",
      "yup"
    ]
  },
  "include": ["./client/src/**/*"],
  "exclude": ["./node_modules", "**/*.spec.ts"]
}
